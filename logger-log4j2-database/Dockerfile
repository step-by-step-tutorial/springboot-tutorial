FROM eclipse-temurin:21-jdk-alpine

ARG JAR_PATH=./target
ARG JAR_NAME=logger-log4j2-database
ARG JAR_VERSION=0.0.1-SNAPSHOT
ARG TARGET_PATH=/app
ENV APPLICATION=${TARGET_PATH}/application.jar
ENV PORT=8080
ENV APP_PROFILES=default
ENV DATABASE_URL=jdbc:mysql://mysql:3306/tutorial_db
ENV DATABASE_USER=user
ENV DATABASE_PASSWORD=password
ENV LOG_TABLE=LOG_TABLE
ENV DATABASE_RECONNECT_DELAY=8000

ADD ${JAR_PATH}/${JAR_NAME}-${JAR_VERSION}.jar ${TARGET_PATH}/application.jar

EXPOSE ${PORT}
ENTRYPOINT java -jar ${APPLICATION}
